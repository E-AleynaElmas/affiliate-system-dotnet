# Database Configuration
CONNECTIONSTRINGS__DEFAULTCONNECTION=Host=localhost;Database=AffiliateSystemDb;Username=your_username;Password=your_password

# JWT Settings
JWTSETTINGS__SECRETKEY=YourSuperSecretKeyThatShouldBeAtLeast32CharactersLong!
JWTSETTINGS__ISSUER=AffiliateSystem
JWTSETTINGS__AUDIENCE=AffiliateSystemUsers
JWTSETTINGS__EXPIRATIONINHOURS=24

# CAPTCHA Settings (Google reCAPTCHA)
CAPTCHASETTINGS__ENABLED=true
CAPTCHASETTINGS__USEGOOGLERECAPTCHA=true
CAPTCHASETTINGS__SITEKEY=your-recaptcha-site-key-here
CAPTCHASETTINGS__SECRETKEY=your-recaptcha-secret-key-here

# Security Settings
SECURITYSETTINGS__MAXFAILEDLOGINATTEMPTS=5
SECURITYSETTINGS__ACCOUNTLOCKOUTMINUTES=30
SECURITYSETTINGS__IPBLOCKINGTHRESHOLD=10
SECURITYSETTINGS__IPBLOCKINGWINDOWHOURS=1
SECURITYSETTINGS__IPBLOCKDURATIONHOURS=24
SECURITYSETTINGS__TOKENEXPIRATIONHOURS=24
SECURITYSETTINGS__PASSWORDMINLENGTH=8
SECURITYSETTINGS__REFERRALLINKEXPIRATIONDAYS=30
SECURITYSETTINGS__DEFAULTREFERRALLINKMAXUSAGES=10
SECURITYSETTINGS__PROGRESSIVEBLOCKINGTHRESHOLD=15
SECURITYSETTINGS__FAILEDATTEMPTSCLEARHOURS=12

# Application Settings
ASPNETCORE_ENVIRONMENT=Production
ASPNETCORE_URLS=http://+:5000;https://+:5001
ALLOWEDHOSTS=*

# Logging
LOGGING__LOGLEVEL__DEFAULT=Information
LOGGING__LOGLEVEL__MICROSOFT_ASPNETCORE=Warning

# Optional: External Services
# REDIS_CONNECTION_STRING=localhost:6379
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@example.com
# SMTP_PASSWORD=your-email-password
